<% content_for(:title, t('.title')) %>
<!-- Container START -->
<div class="container my-4">
  <!-- Row START -->
  <div class="row justify-content-center">
    <!-- Main content START -->
    <div class="col-sm-10 col-md-8 col-lg-7">
			<!-- Card START -->
			<div class="card rounded-3">
					<!-- Title -->
					<div class="card-header text-center">
						<h3 class="mb-0">Twitterで投稿をシェアしてみよう！</h3>
					</div>
					<!-- Body -->
					<div class="card-body p-0">
            <div class="text-center">
              <%= link_to "https://twitter.com/share?url=#{request.base_url}#{user_path(@post.user)}?post_id=#{@post.id}&text=#{@post.body}%0a", title: 'Twitter', target: '_blank', class: 'btn btn-twitter mt-4 mb-3 text-nowrap' do %>
                <i class="fab fa-twitter me-1"></i>
                Twitterでシェア
              <% end %>
            </div>
            <div class="text-center">
              <%= link_to '投稿一覧へ', posts_path, class: 'btn btn-gray mb-4 text-nowrap' %>
            </div>
				  </div>
				</div>
    </div>
    <!-- Main content END -->
  </div>
  <!-- Row END -->
</div>
<!-- Container END -->
