<div class="mt-3" >
  <%= form_with model: [post, comment], id: 'new_comment', class: "position-relative w-100", local: false do |f| %>
    <%= f.text_field :body, class: 'form-control pe-4 bg-light', placeholder: "コメントする" %>
    <%= f.button :type => "submit", style: 'border-style: none;', class: "btn position-absolute top-0 end-0" do %>
      <i class="fa-regular fa-comment fa-lg"></i>
    <% end %>
  <% end %>
</div>