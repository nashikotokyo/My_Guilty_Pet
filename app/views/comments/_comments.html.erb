<!-- Comment wrap START -->
  <details class="my-2 mx-3">
    <% if comments.present? %>
      <summary id="summary-<%= post.id %>">コメントを見る</summary>
    <% else %> 
      <summary class="summary-arrow-hidden" id="summary-<%= post.id %>"></summary>
    <% end %>
    <ul id="comments-wrap-<%= post.id %>" class="list-unstyled pt-2">
      <%= render comments %>
    </ul>
  </details>
