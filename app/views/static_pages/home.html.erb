      <!-- STEP4 START-->
      <div class="row justify-content-center mt-4 mt-sm-6">
        <div class="col-md-10 col-lg-8">
          <div class="row align-items-center">
            <div class="col-3 col-sm-2 col-lg-3">
              <!-- Image -->
              <%= image_pack_tag "paw4_light.png", class: "light-mode-item" %>
              <%= image_pack_tag "paw4_dark.png", class: "dark-mode-item" %>
            </div>
